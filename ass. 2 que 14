#inciude <stdion.h>

int main() {
    int i, value;
    int sum = 0;
    float mean;

    printf("Enter 10 numbers:\n");

    for(i = 1; i <= 10; i++) {
        printf("Number %d: ", i);
        scanf("%d", &value);
        sum += value;
    }

    mean = sum / 10.0;   // mean = sum รท total count

    printf("\nThe sum of the 10 numbers is: %d\n", sum);
    printf("The mean of the 10 numbers is: %.2f\n", mean);

    return 0;
}













