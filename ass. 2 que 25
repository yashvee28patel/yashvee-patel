#include <stdio.h>

int main() {
    int num, temp, digit, rev = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    temp = num;  // store original number

    // reverse the number
    while(temp > 0) {
        digit = temp % 10;
        rev = rev * 10 + digit;
        temp /= 10;
    }

    // check palindrome
    if(num == rev) {
        printf("%d is a Palindrome number ✅\n", num);
    } else {
        printf("%d is NOT a Palindrome number ❌\n", num);
    }

    return 0;
}













