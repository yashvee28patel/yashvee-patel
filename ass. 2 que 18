#include <stdio.h>

int main() {
    int i;
    char sex;
    int boys = 0, girls = 0;

    printf("Enter sex code for 50 students (M for boy, F for girl):\n");

    for(i = 1; i <= 50; i++) {
        printf("Student %d: ", i);
        scanf(" %c", &sex);  // space before %c to skip newline/whitespace

        if(sex == 'M' || sex == 'm') {
            boys++;
        }
        else if(sex == 'F' || sex == 'f') {
            girls++;
        }
        else {
            printf("Invalid input! Please enter M or F.\n");
            i--; // repeat this studentâ€™s input
        }
    }

    printf("\nTotal boys in class: %d\n", boys);
    printf("Total girls in class: %d\n", girls);

    return 0;
}














