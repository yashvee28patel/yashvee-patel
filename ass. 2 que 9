#include <stdio.h>

int main() {
    int n, i, sum = 0;

    printf("Enter how many even numbers you want to sum: ");
    scanf("%d", &n);

    // Adding first n even numbers
    for(i = 1; i <= n; i++) {
        sum += (2 * i);  // formula for even numbers
    }

    printf("The sum of the first %d even numbers is: %d\n", n, sum);

    return 0;
}
