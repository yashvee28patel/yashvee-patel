#include <stdio.h>

int main() {
    int n, i, sum = 0;

    printf("Enter how many odd numbers you want to sum: ");
    scanf("%d", &n);

    // Adding first n odd numbers
    for(i = 1; i <= n; i++) {
        sum += (2 * i - 1);  // formula for odd numbers
    }

    printf("The sum of the first %d odd numbers is: %d\n", n, sum);

    return 0;
}
