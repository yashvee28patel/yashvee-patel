#include <stdio.h>

int main() {
    int num, digit, rev = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    // reverse the number first (so digits come in correct order)
    int temp = num;
    while(temp > 0) {
        digit = temp % 10;
        rev = rev * 10 + digit;
        temp /= 10;
    }

    printf("Digits of %d are: ", num);

    // now print digits one by one
    while(rev > 0) {
        digit = rev % 10;
        printf("%d ", digit);
        rev /= 10;
    }

    printf("\n");
    return 0;
}









