#include <stdio.h>

int main() {
    int num, digit, sum = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    int temp = num;  // keep original number for display

    while(temp > 0) {
        digit = temp % 10;   // get last digit
        sum += digit;        // add to sum
        temp /= 10;          // remove last digit
    }

    printf("The sum of digits of %d is: %d\n", num, sum);

    return 0;
}
