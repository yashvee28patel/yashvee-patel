#include <stdio.h>

int main() {
    int n, i;
    long long fact = 1;   // use long long for big results

    printf("Enter a number to find its factorial: ");
    scanf("%d", &n);

    // Factorial of 0 or 1 is always 1
    if(n == 0 || n == 1) {
        printf("Factorial of %d is: 1\n", n);
    } else {
        printf("%d! = ", n);
        for(i = n; i >= 1; i--) {
            fact *= i;
            printf("%d", i);
            if(i > 1) printf(" * "); // show multiplication steps
        }
        printf(" = %lld\n", fact);
    }
